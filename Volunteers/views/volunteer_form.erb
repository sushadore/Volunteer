<h1>Volunteers</h1>

<% if @volunteers.any? %>
<h4>Click on a volunteer to edit info</h4>

<ul>
  <% @volunteers.each do |volunteer| %>
  <li><a href='/volunteers/<%= volunteer.id %>'><%= volunteer.name %></a><li>
  <% end %>
</ul>
<% else %>
  <h4>You need to add volunteers!</h4>
<% end %>

<h3>Enter a new Volunteer</h3>
<form action ="/volunteers" method="post">
  <label for="name">Name</label>
  <input name="title" type="text">
  <button type="submit">Add volunteer</button>
</form>
